"""An RFC-4122 standardized universal identifier."""
scalar UUID

type BlogPost {

  id: UUID!
  title: String!
  content: String!

}

input BlogPostInput {

  title: String!
  content: String!

}

type Query {

  findAllBlogPosts: [BlogPost]!
  findBlogPostById(id: UUID!): BlogPost

}

type Mutation {

  createBlogPost(input: BlogPostInput!): BlogPost
  deleteBlogPost(id: UUID!): Boolean!

}